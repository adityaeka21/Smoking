<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream"
    tools:context=".SimulasiModelActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="236dp"
            android:layout_height="39dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="16dp"
            android:background="@color/cream"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:popupTheme="@style/Theme.AppCompat.Dialog"
            app:title="Model Simulation"
            app:titleCentered="true"
            app:titleTextColor="@color/black" />

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <EditText
                    android:id="@+id/gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Gender ( Wanita 0 - Pria 1 )"
                    android:inputType="numberDecimal"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Age ( 20 - 85 )"
                    android:inputType="numberDecimal"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/systolic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Systolic ( 71 - 240 )"
                    android:inputType="numberDecimal"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/relaxation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Relaxation ( 40 - 146 )"
                    android:inputType="numberDecimal"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/Cholesterol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Cholesterol ( 55 - 445 )"
                    android:inputType="numberDecimal"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/triglyceride"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Triglyceride ( 8 - 999 )"
                    android:inputType="numberDecimal"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/hemoglobin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Hemoglobin ( 4.9 - 21.1 )"
                    android:inputType="numberDecimal"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/oral"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Oral ( Ya 0 - Tidak 1 )"
                    android:inputType="numberDecimal"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btnCheck"
                    android:layout_width="147dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Predict" />

                <TextView
                    android:id="@+id/txtResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:text="" />

            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
